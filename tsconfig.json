{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "strict": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "locale": "zh-CN",
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "node"
    ],
    // "paths": {
    //   "@/*": [
    //     "src/*"
    //   ],
    //   "@root/*": [
    //     "*"
    //   ]
    // },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
      "es5"
    ]
  },
  // "include": [
  //   "types",
  //   "src/**/*.ts",
  //   "src/**/*.tsx",
  // ],
  "exclude": [
    "node_modules"
  ]
}